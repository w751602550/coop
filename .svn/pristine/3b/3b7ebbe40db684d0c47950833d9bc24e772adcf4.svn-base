<div class="row-content am-cf">
    <div class="row">
        <div class="am-u-sm-12 am-u-md-12 am-u-lg-12">
            <div class="widget am-cf">
                <form id="my-form" class="am-form tpl-form-line-form">
                    <input type="hidden" name="order[order_id]" value="{$order.order_id}">
                    <div class="widget-body">
                        <fieldset>
                            <div class="widget-head am-cf">
                                <div class="widget-title am-fl">查看订单状态</div>
                            </div>
                            <div class="am-form-group">
                                <label class="am-u-sm-3 am-u-lg-2 am-form-label form-require">订单号 </label>
                                <div class="am-u-sm-9 am-u-end">
                                    <input type="text" class="tpl-form-input"
                                           value="{$order.order_sn}" disabled='disabled'>
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label class="am-u-sm-3 am-u-lg-2 am-form-label form-require">订单价格 </label>
                                <div class="am-u-sm-9 am-u-end">
                                    <input type="number" value="{$order.total_price}" disabled='disabled'>
                                </div>
                            </div>

                            <div class="am-form-group">
                                <label class="am-u-sm-3 am-u-lg-2 am-form-label">订单状态</label>
                                <div class="am-u-sm-9 am-u-end">
                                    <select name="order[status]" data-am-selected="{ btnSize: 'sm',maxHeight: 400}">
                                        {volist name='status' id='vo'}
                                        <option value="{$key}" {if condition="$order.status eq $key" }selected{
                                        /if}>{$vo}</option>
                                        {/volist}
                                    </select>
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label class="am-u-sm-3 am-u-lg-2 am-form-label form-require">商品 </label>
                                <div class="goodsview am-u-sm-3 am-u-end" style='color:orange;cursor:pointer'>
                                    点击查看订单商品详情
                                </div>
                                <div class="goods am-u-sm-10 am-u-end" style='display:none'>
                                    <div class="am-form-file">
                                        <div class="am-form-file">
                                            {volist name='order.goods' id='good'}
                                            <div class="uploader-list am-cf" style='width:50%;float:left'>

                                                <div class="file-item">
                                                    <a target="_blank">
                                                        <img src="{$good.goods_image}">
                                                    </a>

                                                </div>
                                                <div class="file-item" style='border:none;line-height:100px;'>
                                                    <a href="">{$good.goods_name}</a>
                                                    {$good.price}元*{$good.number}
                                                </div>

                                            </div>
                                            {/volist}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label class="am-u-sm-3 am-u-lg-2 am-form-label form-require">收货人 </label>
                                <div class="am-u-sm-3 am-u-end">
                                    <input type="text" class="tpl-form-input"
                                           value="{$order.address.name}" disabled='disabled'>
                                </div>
                                <label class="am-u-sm-3 am-u-lg-2 am-form-label form-require">手机号 </label>
                                <div class="am-u-sm-3 am-u-end">
                                    <input type="text" class="tpl-form-input"
                                           value="{$order.address.phone}" disabled='disabled'>
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label class="am-u-sm-3 am-u-lg-2 am-form-label form-require">地址 </label>
                                <div class="am-u-sm-9 am-u-end">
                                    <input type="text" class="tpl-form-input"
                                           value="{$order.address.first_address}{$order.address.address}"
                                           disabled='disabled'>
                                </div>
                            </div>
                            <div class="am-form-group">
                                <div class="am-u-sm-9 am-u-sm-push-3 am-margin-top-lg">
                                    <a class="am-btn am-btn-default" href="javascript:"
                                       onclick="javascript:history.go(-1)">返回 </a>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>

    $(function () {
        $('.goodsview').click(function () {
            $('.goods').toggle(100);
        });
    });
</script>
