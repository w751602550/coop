                                <th>商品图片</th>
                                <th>商品名称</th>
                                <th>分类名称</th>
                                <th>价格</th>
                                <th>市场价</th>
                                <th>单位</th>
                                <th>规格</th>
                                <th>商品状态</th>
                                <th>商城时间</th>
                                <th>更新时间</th>
                                <th>操作</th>
